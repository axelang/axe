// Test for parallel for loops with reduction
// This should generate OpenMP parallel for with reduction clause

def main() {
    println "Testing parallel for with reduction:";
    
    mut val sum: i32 = 0;
    mut val n: i32 = 100;
    
    parallel for mut i = 0 to n reduce(+:sum) {
        sum = sum + i;
    }
    
    println "Sum from 0 to 99 = ";
    println sum;
    println "Expected: 4950";
}

use std.os;
use std.string;

def clear_screen() {
    platform windows {
        exec("cls");
    } 
    platform posix {
        exec("clear");
    }
}

def color_text(text: string, color_code: i32): string {
    mut i: string = concat(str("\033["), i32_to_string(color_code));
    i = concat(i, str("m"));
    i = concat(i, text);
    i = concat(i, str("\033[0m"));
    return i;
}

test {
    clear_screen();
    print "it worked";
}
